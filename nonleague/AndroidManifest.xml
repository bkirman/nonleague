<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.lincoln.games.non_league"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.ac.lincoln.games.non_league.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.ac.lincoln.games.non_league.TeamStatus"
            android:label="@string/app_name"
             android:noHistory="true">
        </activity>
        <activity
            android:name="uk.ac.lincoln.games.non_league.PostMatchResults"
            android:label="NON-LEAGUE WEEKLY RESULTS" 
             android:noHistory="true">
        </activity>
        <activity
            android:name="uk.ac.lincoln.games.non_league.LeagueTableView"
            android:label="NON-LEAGUE CURRENT STANDINGS" 
             android:noHistory="true">
        </activity>
        <activity
            android:name="uk.ac.lincoln.games.non_league.PlayerMatchResult"
            android:label="@string/app_name" 
             android:noHistory="true">
        </activity>
        <activity
            android:name="uk.ac.lincoln.games.non_league.PreMatchActions"
            android:label="@string/app_name" 
             android:noHistory="true">
        </activity>
    </application>

</manifest>
